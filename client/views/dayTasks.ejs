<!DOCTYPE html>
<html>
<head>
    <title>Tasks for <%= date %></title>
</head>
<body>
    <h1>Tasks on <%= date %></h1>
    <a href="/tasks/calendar">Back to Calendar</a>
    <a href="/dashboard"> Back to Dashboard</a>

    <ul>
        <% tasks.forEach(task => { %>
            <li><%= task.title %> — Status: <%= task.status %></li>
        <% }) %>
    </ul>
    <h2>Tasks on <%= date %></h2>
    <% if (tasks.length === 0) { %>
        <p>No tasks scheduled for this day.</p>
    <% } else { %>
        <ul>
            <% tasks.forEach(task => { %>
                <li>
                    <strong><%= task.title %></strong> – <%= task.scheduledFor.toLocaleTimeString() %>
                    <% if (task.description) { %>
                        <p><%= task.description %></p>
                    <% } %>
                    <span>Status: <%= task.status %></span>
                </li>
            <% }) %>
        </ul>
    <% } %>
</body>
</html>
