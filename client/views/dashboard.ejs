<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StudyBuddy | Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header Styles */
        header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 25px 30px;
            margin-bottom: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .welcome-section h1 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 5px;
        }

        .welcome-section .subtitle {
            color: #666;
            font-size: 1.1rem;
        }

        nav {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        nav a {
            text-decoration: none;
            padding: 12px 20px;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            color: #333;
            position: relative;
            overflow: hidden;
        }

        nav a:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        nav a.home {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

        nav a.calendar {
            background: linear-gradient(135deg, #ffecd2, #fcb69f);
            color: #333;
        }

        nav a.logout {
            background: linear-gradient(135deg, #ff9a9e, #fecfef);
            color: #333;
        }

        /* Main Content Grid */
        main {
            display: grid;
            grid-template-columns: 1fr 2fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }

        /* Card Base Styles */
        .card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
        }

        .card h2 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 20px;
            color: #333;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* Profile Section */
        .profile {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            font-weight: bold;
            margin-bottom: 15px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
        }

        .profile-info {
            background: rgba(102, 126, 234, 0.1);
            padding: 15px;
            border-radius: 12px;
            width: 100%;
            margin-top: 15px;
        }

        .profile-info p {
            margin: 8px 0;
            color: #666;
        }

        .profile-info strong {
            color: #333;
        }

        /* Task Form */
        .task-form {
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            border-radius: 16px;
            padding: 25px;
            margin-bottom: 25px;
        }

        .task-form h3 {
            margin-bottom: 20px;
            color: #333;
            font-size: 1.2rem;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 15px;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            background: rgba(255, 255, 255, 0.9);
            transition: all 0.3s ease;
            outline: none;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            background: white;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
            transform: translateY(-2px);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 80px;
        }

        .submit-btn {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 15px 30px;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            width: 100%;
        }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }

        /* Task List */
        .task-list {
            max-height: 500px;
            overflow-y: auto;
        }

        .task-item {
            background: rgba(255, 255, 255, 0.8);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 15px;
            border-left: 4px solid #667eea;
            transition: all 0.3s ease;
            position: relative;
        }

        .task-item:hover {
            transform: translateX(5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .task-item.completed {
            border-left-color: #4ade80;
            background: rgba(74, 222, 128, 0.1);
        }

        .task-item.missed {
            border-left-color: #f87171;
            background: rgba(248, 113, 113, 0.1);
        }

        .task-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 10px;
        }

        .task-title {
            font-weight: 600;
            font-size: 1.1rem;
            color: #333;
            margin-bottom: 5px;
        }

        .task-date {
            font-size: 0.9rem;
            color: #666;
        }

        .task-description {
            color: #555;
            margin: 10px 0;
            font-size: 0.95rem;
            line-height: 1.4;
        }

        .task-actions {
            display: flex;
            gap: 10px;
            align-items: center;
            margin-top: 15px;
        }

        .status-select {
            padding: 8px 12px;
            border: none;
            border-radius: 8px;
            background: rgba(102, 126, 234, 0.1);
            color: #333;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .status-select:hover {
            background: rgba(102, 126, 234, 0.2);
        }

        .delete-btn {
            background: linear-gradient(135deg, #ff9a9e, #fecfef);
            border: none;
            padding: 8px 12px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1.1rem;
            transition: all 0.3s ease;
        }

        .delete-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 5px 15px rgba(255, 154, 158, 0.4);
        }

        /* Features Section */
        .features {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
        }

        .feature-list {
            list-style: none;
        }

        .feature-item {
            padding: 15px;
            margin-bottom: 10px;
            background: rgba(255, 255, 255, 0.6);
            border-radius: 12px;
            font-weight: 500;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .feature-item:hover {
            background: rgba(255, 255, 255, 0.8);
            transform: translateX(10px);
        }

        /* Footer */
        footer {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 20px;
            text-align: center;
            color: #666;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        /* Status Colors */
        .status-pending { color: #f59e0b; }
        .status-completed { color: #10b981; }
        .status-missed { color: #ef4444; }

        /* Responsive Design */
        @media (max-width: 1024px) {
            main {
                grid-template-columns: 1fr 1fr;
            }
            
            .features {
                grid-column: 1 / -1;
            }
        }

        @media (max-width: 768px) {
            main {
                grid-template-columns: 1fr;
            }
            
            header {
                flex-direction: column;
                gap: 20px;
                text-align: center;
            }
            
            nav {
                flex-wrap: wrap;
                justify-content: center;
            }
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            animation: fadeInUp 0.6s ease-out;
        }

        .card:nth-child(1) { animation-delay: 0.1s; }
        .card:nth-child(2) { animation-delay: 0.2s; }
        .card:nth-child(3) { animation-delay: 0.3s; }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <div class="welcome-section">
                <h1>Welcome back, <%= user.username %>!</h1>
                <p class="subtitle">Ready to crush your study goals today?</p>
            </div>
            <nav>
                <a href="/" class="home">üè† Home</a>
                <a href="/tasks/calendar" class="calendar">üìÖ Calendar</a>
                <a href="/auth/logout" class="logout">üëã Logout</a>
            </nav>
        </header>

        <main>
            <section class="card profile">
                <h2>üë§ Your Profile</h2>
                <div class="avatar">
                    <%= user.username.charAt(0).toUpperCase() %>
                </div>
                <div class="profile-info">
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>Member since:</strong> <%= new Date(user.createdAt).toLocaleDateString() %></p>
                    <p><strong>Tasks completed:</strong> <%= tasks.filter(t => t.status === 'completed').length %></p>
                </div>
            </section>

            <section class="card tasks">
                <h2>üìù Your Tasks</h2>
                
                <div class="task-form">
                    <h3>Add New Task</h3>
                        <form method="POST" action="/tasks/create">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="What do you need to study?" required />
                        </div>
                        <div class="form-group">
                            <input type="datetime-local" name="scheduledFor" required />
                        </div>
                        <div class="form-group">
                            <textarea name="description" placeholder="Add some details about this task..."></textarea>
                        </div>
                        <button type="submit" class="submit-btn">‚ú® Add Task</button>
                    </form>
                </div>

                <div class="task-list">
                    <% if (tasks.length === 0) { %>
                        <div style="text-align: center; padding: 40px; color: #666;">
                            <div style="font-size: 3rem; margin-bottom: 15px;">üìö</div>
                            <p>No tasks yet! Add your first study task above.</p>
                        </div>
                    <% } else { %>
                        <% tasks.forEach(task => { %>
                            <div class="task-item <%= task.status %>">
                                <div class="task-header">
                                    <div>
                                        <div class="task-title" id="title-<%= task._id %>"><%= task.title %></div>
                                        <div class="task-date" id="date-<%= task._id %>">üìÖ <%= task.scheduledFor.toLocaleString() %></div>
                                    </div>
                                    <span class="status-<%= task.status %>">
                                        <%= task.status === 'completed' ? '‚úÖ' : 
                                            task.status === 'missed' ? '‚ùå' : '‚è≥' %>
                                    </span>
                                </div>
                            
                                <div class="task-description"><%= task.description %></div>
                            
                                <!-- üìù Edit Form (Hidden by default) -->
                                <form method="POST" action="/tasks/<%= task._id %>?_method=PUT" class="edit-form" id="edit-form-<%= task._id %>" style="display:none; margin-bottom: 15px;">
                                    <input type="text" name="title" value="<%= task.title %>" placeholder="Title" class="form-group" required style="width:100%; margin-bottom: 8px; padding: 10px; border-radius: 8px;">
                                    <input type="datetime-local" name="scheduledFor" value="<%= task.scheduledFor.toISOString().slice(0,16) %>" class="form-group" required style="width:100%; margin-bottom: 8px; padding: 10px; border-radius: 8px;">
                                    <textarea name="description" placeholder="Description" class="form-group" style="width:100%; padding: 10px; border-radius: 8px;"><%= task.description %></textarea>
                                    <button type="submit" class="submit-btn" style="margin-top: 10px;">üíæ Save</button>
                                </form>
                            
                                <!-- Edit + Delete Buttons -->
                                <div class="task-actions">
                                    <% if (task.status !== 'completed') { %>
                                        <form action="/tasks/<%= task._id %>?_method=PUT" method="POST" style="display:inline;">
                                            <input type="hidden" name="title" value="<%= task.title %>">
                                            <input type="hidden" name="description" value="<%= task.description %>">
                                            <input type="hidden" name="scheduledFor" value="<%= task.scheduledFor.toISOString() %>">
                                            <input type="hidden" name="status" value="completed">
                                            <input type="hidden" name="redirectTo" value="/dashboard">
                                            <button type="submit" class="delete-btn" title="Mark as Completed" style="background: linear-gradient(135deg, #ff9a9e, #fecfef);">
                                                ‚úÖ
                                            </button>
                                        </form>
                                        
                                    <% } %>
                                    
                                    
        
                                    <form method="POST" action="/tasks/<%= task._id %>" style="display:inline;">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="delete-btn">üóëÔ∏è</button>
                                    </form>
                                
                                    <button class="delete-btn" style="background: linear-gradient(135deg, #a1c4fd, #c2e9fb);" onclick="toggleEditForm('<%= task._id %>')">‚úèÔ∏è</button>
                                </div>  
                            </div>
                        <% }) %>
                    <% } %>
                </div>

            </section>

            <section class="card features">
                <h2>üöÄ Coming Soon</h2>
                <ul class="feature-list">
                    <li class="feature-item">üìò Create Study Groups</li>
                    <li class="feature-item">üéØ Track Study Goals</li>
                    <li class="feature-item">üìù Share Notes</li>
                    <li class="feature-item">üí¨ Private Messaging</li>
                    <li class="feature-item">üìä Progress Analytics</li>
                    <li class="feature-item">üèÜ Achievement System</li>
                </ul>
            </section>
        </main>

        <footer>
            <p>¬© 2025 StudyBuddy Inc. ‚Ä¢ Empowering students worldwide üåü</p>
        </footer>
    </div>

    <script>
        // Add some interactive feedback
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth scroll for navigation
            const navLinks = document.querySelectorAll('nav a');
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });

            // Add completion animation
            const statusSelects = document.querySelectorAll('.status-select');
            statusSelects.forEach(select => {
                select.addEventListener('change', function() {
                    const taskItem = this.closest('.task-item');
                    taskItem.style.transform = 'scale(1.02)';
                    setTimeout(() => {
                        taskItem.style.transform = '';
                    }, 300);
                });
            });

            // Feature item hover effects
            const featureItems = document.querySelectorAll('.feature-item');
            featureItems.forEach(item => {
                item.addEventListener('click', function() {
                    this.style.background = 'rgba(102, 126, 234, 0.2)';
                    setTimeout(() => {
                        this.style.background = '';
                    }, 200);
                });
            });
        });
        function toggleEditForm(taskId) {
            const form = document.getElementById(`edit-form-${taskId}`);
            const title = document.getElementById(`title-${taskId}`);
            const date = document.getElementById(`date-${taskId}`);

            if (form.style.display === "none") {
                form.style.display = "block";
                title.style.display = "none";
                date.style.display = "none";
            } else {
                form.style.display = "none";
                title.style.display = "block";
                date.style.display = "block";
            }
        };
    </script>
</body>
</html>